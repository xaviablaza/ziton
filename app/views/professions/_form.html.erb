
<%= simple_form_for(@profession) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :company %>
    <%= f.input :website %>
    <%= f.input :title %>
    <%= f.input :job_url %>
    <%= f.input :location %>
    <%= f.input :status, collection: Profession.statuses.keys %>
    <%= f.association :cover_letter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
